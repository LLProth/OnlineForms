            <div id="recentHeading" class="w-100">
                <h3>Changelist</h3>
            </div>
            <table>
                <thead>
                    <tr>
                        <th>
                            Task:
                        </th>
                        <th>
                            Completed By:
                        </th>
                        <th>
                            Completed On:
                        </th>
                        <th>Status</th>
                        <th>Comments</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (OnlineForms.Models.ESCRFViewModel.TaskListItemModel taskListItem in Model.TaskListItemHolder)
                    {
                        if (taskListItem.TaskListID == ViewBag.ID)
                        {


                            <tr>
                                <td>
                                    @taskListItem.Task
                                </td>
                                <td>
                                    @taskListItem.Deputy
                                </td>
