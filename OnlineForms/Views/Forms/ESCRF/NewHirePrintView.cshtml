    <table id="printTable">


        <thead>
            <tr class="printHeading">
                <th colspan="4">Supervisor Tasks</th>
                <th colspan="2">Completed By</th>
                <th colspan="2">Completed On</th>
                <th colspan="2">Status</th>
                <th colspan="2">Comments</th>
            </tr>
        </thead>
        <tbody>
            @foreach (OnlineForms.Models.ESCRFViewModel.TaskListItemModel taskListItem in Model.TaskListItemHolder)
            {
                if (taskListItem.TaskListID == ViewBag.ID)
                {
                    if (taskListItem.Deputy.ToUpper() != "Help Desk" && taskListItem.Deputy.ToUpper() != "IS TECH" && taskListItem.Deputy.ToUpper() != "HR" && taskListItem.Deputy.ToUpper() != "FINANCE" && taskListItem.Deputy.ToUpper() != "ERGO" && !taskListItem.Deputy.ToUpper().Contains("FACILITY"))
                    {
                        <tr class="printRow">
                            <td class="printCell" colspan="4">@taskListItem.Task</td>
                            <td colspan="2">@taskListItem.CompletedBy</td>
                            @if (taskListItem.SignedOn == DateTime.MinValue)
                            {
                                <td class="printCell" colspan="2">
                                    Not Signed
                                </td>
                            }
                            else
                            {
                                <td class="printCell" colspan="2">
                                    @taskListItem.SignedOn.ToShortDateString()
                                </td>
                            }
                            @if (taskListItem.Completed)
                            {
                                <td class="printCell" colspan="2">Completed</td>
                            }
                            else if (taskListItem.NotApplicable)
                            {
                                <td class="printCell" colspan="2">N/A</td>
                            }
                            else
                            {
                                <td class="printCell" colspan="2"></td>
                            }
                            <td class="printCell" colspan="2">@taskListItem.Comments</td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>

